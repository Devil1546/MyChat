<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/jmui_menu_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:paddingLeft="@dimen/all_margin"
        android:background="@color/my_theme_color">
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="MychatID/手机号登录"
            android:textSize="25sp"/>
    </RelativeLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="账号："
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text_size" />
        <EditText
            android:id="@+id/et_user_name"
            android:hint="请输入MychatID/手机号"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="密码："
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text_size" />
        <EditText
            android:id="@+id/et_password"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingLeft="20dp">
        <Button
            android:id="@+id/btn_login"
            android:text="登录"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_text_size"
            android:background="@drawable/btn_normal_bg"
            android:layout_width="150dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="还没有账号？"
            android:layout_marginLeft="20dp"
            android:layout_gravity="bottom"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_open_register"
            android:text="注册"
            android:background="@drawable/btn_white_bg"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="30dp"/>
    </LinearLayout>
</LinearLayout>